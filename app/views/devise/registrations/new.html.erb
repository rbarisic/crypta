
  <%= render 'shared/header' %>


<div class="l-box x-container x-c-50 x-c-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'x-form'}) do |f| %>
    <%= devise_error_messages! %>
    
    <fieldset>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'info@example.com' %>

      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: ("#{@minimum_password_length} characters minimum" if @validatable) %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    </fieldset>

    <fieldset>
      <%= f.submit "Sign up" %>
    </fieldset>
  <% end %>
  
  <%= render "devise/shared/links" %>

</div>
